<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:background="@drawable/bg1"
    android:backgroundTint="#59000000"
    android:backgroundTintMode="src_atop"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btnClearLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_clear"
        android:paddingHorizontal="10dp"
        android:text="Clear"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_close"
        android:paddingHorizontal="10dp"
        android:text="Exit"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPassLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:width="150dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_login"
        android:paddingHorizontal="20dp"
        android:text="Login"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtPassLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:width="200dp"
        android:height="50dp"
        android:paddingStart="20dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/white"
        android:hint=" Email" />

    <EditText
        android:id="@+id/txtPassLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_centerInParent="true"
        android:width="200dp"
        android:height="50dp"
        android:paddingStart="20dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/white"
        android:hint=" Password"
        />

    <TextView
        android:id="@+id/textRegisterHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Register here"
        android:textColor="#04CDFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtEmailLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30sp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>